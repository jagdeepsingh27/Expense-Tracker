<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blueGray90</item>
        <item name="colorOnPrimary">@color/blueGray10</item>
        <item name="colorPrimaryContainer">@color/blueGray30</item>
        <item name="colorOnPrimaryContainer">@color/blueGray90</item>
        <item name="colorPrimaryInverse">@color/blueGray10</item>

        <item name="colorSecondary">@color/blueGray90</item>
        <item name="colorOnSecondary">@color/blueGray10</item>
        <item name="colorSecondaryContainer">@color/blueGray10</item>
        <item name="colorOnSecondaryContainer">@color/blueGray90</item>

        <item name="android:colorBackground">@color/blueGray70</item>
        <item name="colorOnBackground">@color/blueGray10</item>

        <item name="colorTertiary">@color/blueGray80</item>
        <item name="colorOnTertiary">@color/blueGray10</item>
        <item name="colorTertiaryContainer">@color/blueGray10</item>
        <item name="colorOnTertiaryContainer">@color/blueGray90</item>

        <item name="colorError">@color/red90</item>
        <item name="colorOnError">@color/red10</item>
        <item name="colorErrorContainer">@color/red20</item>
        <item name="colorOnErrorContainer">@color/red90</item>

        <item name="colorSurface">@color/blueGray80</item>
        <item name="colorOnSurface">@color/blueGray10</item>

        <item name="colorSurfaceInverse">@color/blueGray90</item>
        <item name="colorOnSurfaceInverse">@color/blueGray10</item>

        <item name="colorSurfaceVariant">@color/blueGray10</item>
        <item name="colorOnSurfaceVariant">@color/blueGray90</item>

        <item name="colorOutline">@color/blueGray70</item>
    </style>


    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#263238</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.ExpenseTracker</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="DateTimePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?colorOnSurface</item>
    </style>


    <style name="DatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">?colorSurface</item>
        <item name="android:colorControlActivated">?colorPrimary</item> <!--selected day-->
        <item name="android:textColorPrimary">?colorOnSurface</item> <!--days of the month-->
        <item name="android:textColorSecondary">?colorOnSurface</item>    <!--days of the week-->
        <item name="android:buttonBarNegativeButtonStyle">@style/DateTimePickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DateTimePickerButtonStyle</item>
    </style>

    <style name="TimePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">?colorSurface</item>
        <item name="android:colorControlActivated">?colorPrimary</item> <!--selected day-->
        <item name="android:textColorSecondary">?colorOnSurface</item><!--days of the week-->
        <item name="android:buttonBarNegativeButtonStyle">@style/DateTimePickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DateTimePickerButtonStyle</item>
    </style>
    <style name="FullScreenDialogFragmentTheme" parent="Theme.ExpenseTracker">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Theme.ExpenseTracker">
        <item name="boxStrokeColor">?colorOnSurface</item>
        <item name="hintTextColor">?colorOnSurface</item>
        <item name="android:textColorHint">?colorOnBackground</item>
        <item name="hintTextAppearance">@style/App.Style.TextAppearance.Body2</item>
    </style>

</resources>